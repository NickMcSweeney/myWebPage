// some kind of dimension unit
photoHeight=250
center( marg )
  margin-left: marg
  margin-right: marg
imgs = '.sm_port, .lg_port, .sm_lan, .lg_lan'
dark_background = #0F0E0F

.photo_page
  color: white
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  .title-bar
    width: 100%
    height: 18vh
    position: fixed
    top: 0
    background: dark_background
    border-bottom: 3px solid white
    h1
      display: block
      vertical-align: middle
      font-size: 7vh
      
  .lib
    width: 100%
    height: 75vh
    margin-top: 18vh
    margin-bottom: 7vh
    overflow-y: scroll
    li, .portrait, .landscape
      display: inline
      overflow: hidden
      height: (photoHeight)px
      margin: 1px
    ul
      list-style-type: none
      margin: 0
      padding: 0
      display: inline
    a
      width: inherit
      height: inherit
    .portrait
      width: photoHeight*(3/4)px
    .landscape
      width: photoHeight*(4/3)px
    .sm_port
      width inherit
      height: auto
    .lg_port
      width: auto
      height: inherit
    .sm_lan
      width: auto
      height: inherit
    .lg_lan
      width: inherit
      height: auto
    {imgs}
      center(auto)

.lib::-webkit-scrollbar-track
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background-color: white;
  border-left: 2px solid #555555
.lib::-webkit-scrollbar
  width: 10px;
  background-color: #F5F5F5;
.lib::-webkit-scrollbar-thumb
  background-color: dark_background;
  border-left: 2px solid #555555;
