ul.project-list
  li.project-list-item
    padding: 2rem
    margin-bottom: 2rem
    border: var(--border)
    cursor: pointer
    transition: background-color .2s ease-in-out
    box-sizing: border-box
    
    &:hover
      background-color: $colors.grey-light
    
    &:last-of-type
      margin-bottom: 0

    display: flex
    flex-direction: row
    flex-wrap: nowrap
    overflow: hidden
    
    &.selected
      border: 3px solid $colors.grey-dark
      padding: 1.8rem
    
    > .col-1
      flex: 2
      min-width: 0
      padding-right: 2rem
      
      h5
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
    
    > .col-2
      text-align: right
        
      .view-tasks-link
        padding: .5rem
        margin-top: .5rem
        text-align: center
        width: 10rem
        text-align: center
        display: inline-block
        border: var(--border)
        border-radius: 3px
        transition: background-color .5s ease-in-out

        &:hover
          background-color: $colors.grey-medium
